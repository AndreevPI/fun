<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPurple"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a1.calculaotofpetrol.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="139dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Petrol Checker"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/AutoCar"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:hint="Марка авто" />

        <EditText
            android:id="@+id/TextDistance"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:ems="10"
            android:hint="Дистанция (км)"
            android:inputType="number" />

        <EditText
            android:id="@+id/TextSpeed"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:ems="10"
            android:hint="Средняя скорость (км/ч)"
            android:inputType="number" />

        <TextView
            android:id="@+id/TextContents"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textResult"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:gravity="center"
            android:textSize="32sp" />


        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/button_result"
            android:onClick="onClickResult"
            android:text="РЕЗУЛЬТАТ"
            android:textColor="@android:color/darker_gray"
            android:textSize="28sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
